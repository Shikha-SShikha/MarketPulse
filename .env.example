# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/intelligence_db

# Authentication
CURATOR_TOKEN=your-secure-token-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Automated Collection
ENABLE_AUTOMATED_COLLECTION=true
COLLECTION_SCHEDULE_HOUR=9

# OpenAI Configuration (REQUIRED for brief generation)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.5

